#!/usr/bin/env bash

# change to script's dir
#cd `dirname "$0"`

# uses the name of the script to restart the gunicorn instance
branch=${0##*-}

echo restarting $branch server

# delete all cached .pyc files
find /home/psetpartners/psetpartners-git-$branch -name '*.pyc' -delete

# restart server
kill -HUP `cat /home/psetpartners/gunicorn-$branch.pid`

echo '... done'
